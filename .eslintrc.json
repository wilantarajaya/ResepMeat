{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": "off",
        "no-console": "off",
        "radix": "off",
        "no-use-before-define": "off", 
        "no-alert": "off",
        "no-undef": "off",
        "import/no-extraneous-dependencies": "off",
        "import/extensions": "off",
        "no-underscore-dangle": "off"
    }
}
